<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <!--1、所有Logger的父节点，root的设置在所有的logger中都起作用-->
  <!--2、如果root和logger中设置了相同的appender，日志会被记录两次-->
  <root>
    <level value="ALL" />
  </root>
  <logger name="app">
    <level value="ALL"/>
    <appender-ref ref="AppLogFileAppender" />
  </logger>
  <!--日志记录器logger可以有多个-->
  <logger name="runtime">
    <level value="ALL"/>
    <appender-ref ref="RuntimeLogFileAppender" />
  </logger>
  <logger name="biz">
    <level value="ALL"/>
    <appender-ref ref="BizLogFileAppender" />
  </logger>
  <!--1、一个appender可以被多个logger共用-->
  <!--2、logger可以同时引用多个appender-->
  <appender name="AppLogFileAppender" type="log4net.Appender.FileAppender" >
    <param name="File" value="./log/app.txt" />
    <param name="AppendToFile" value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="%d [%t] %-5p %c [%x]  - %m%n" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="DEBUG" />
      <param name="LevelMax" value="ERROR" />
    </filter>
  </appender>
  <appender name="RuntimeLogFileAppender" type="log4net.Appender.FileAppender" >
    <param name="File" value="./log/runtime.txt" />
    <param name="AppendToFile" value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="%d [%t] %-5p %c [%x]  - %m%n" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="DEBUG" />
      <param name="LevelMax" value="ERROR" />
    </filter>
  </appender>
  <appender name="BizLogFileAppender" type="log4net.Appender.FileAppender" >
    <param name="File" value="./log/biz.txt" />
    <param name="AppendToFile" value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="%d [%t] %-5p %c [%x]  - %m%n" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="DEBUG" />
      <param name="LevelMax" value="ERROR" />
    </filter>
  </appender>
</log4net>
